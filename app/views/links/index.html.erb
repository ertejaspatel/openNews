<% @links.each do |link| %>
 <div class="row link clearfix">
   <h2>
     <%= link_to link.title, link_path(link) %><br>
     <small class="author">
      Submitted <%= time_ago_in_words(link.created_at)%> ago by <%= link.user.name if link.user %>
     </small>
   </h2>

   <div class="btn-group">
     <a href="<%=link.url%>" class="btn btn-default btn-sm">Visit Link</a>
     <%=link_to like_link_path(link), method: :put, class: 'btn btn-default btn-sm' do %>
      <span class="glyphicon glyphicon-chevron-up"></span>Upvote
      <%=link.get_upvotes.size%>
     <% end %>
     <%=link_to dislike_link_path(link), method: :put, class: 'btn btn-default btn-sm' do %>
      <span class="glyphicon glyphicon-chevron-down"></span>Downvote
      <%=link.get_downvotes.size%>
     <% end %>
     <%=link_to 'Unvote', unvote_link_path(link), method: :put, class: 'btn btn-default btn-sm' %>           
   </div>
 </div>  
<% end %>

