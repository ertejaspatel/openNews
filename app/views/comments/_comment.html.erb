<%= div_for(comment) do %>
  <div class="comments_wrapper clearfix">
    <div class="pull-left">
      <p class="lead" style="margin:0;"><%= comment.body %></p>
      <p>
        <small>
          Submitted about <strong><%=time_ago_in_words(comment.created_at)%></strong> ago by <strong> <%=comment.user.name if comment.user%> </strong>
        </small>
      </p>
    </div>
    <div class="pull-right">
      <% if comment.user == current_user %>
        <%=link_to "Delete", comment, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-default btn-sm" %>
      <% end %>
    </div>
  </div>
<% end %>